{
  "name": "@lcluber/gitbranchvalidator",
  "version": "1.3.0",
  "description": "Git branch name validator on Git hooks for clean workflow",
  "keywords": [
    "branch name",
    "branch",
    "hook",
    "git",
    "git hook",
    "pre push",
    "pre commit",
    "husky"
  ],
  "homepage": "https://github.com/LCluber/GitBranchValidator",
  "main": "./lib/main.js",
  "bin": {
    "gbvalidator": "./bin/index.js"
  },
  "preferGlobal": true,
  "scripts": {
    "test": "jest --coverage",
    "pretty": "prettier --check 'lib/*.js' 'bin/*.js' --write",
    "commit": "git-cz",
    "semantic-release": "semantic-release"
  },
  "files": [
    "bin/",
    "lib/"
  ],
  "engines": {
    "node": ">=8"
  },
  "author": {
    "name": "Ludovic Cluber",
    "email": "http://www.lcluber.com/contact",
    "url": "http://www.lcluber.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LCluber/GitBranchValidator.git"
  },
  "bugs": {
    "url": "https://github.com/LCluber/GitBranchValidator/issues",
    "email": ""
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run test",
      "commit-msg": "",
      "pre-push": ""
    }
  },
  "license": "MIT",
  "dependencies": {
    "@lcluber/chjs": "2.9.0",
    "command-line-args": "5.1.1",
    "command-line-usage": "6.0.2",
    "current-git-branch": "1.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@commitlint/prompt": "8.2.0",
    "@semantic-release/changelog": "3.0.4",
    "@semantic-release/git": "7.0.16",
    "@semantic-release/npm": "5.2.0",
    "commitizen": "4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "husky": "2.7.0",
    "jest": "24.9.0",
    "prettier": "1.18.2",
    "pretty-quick": "2.0.0",
    "semantic-release": "15.13.27"
  }
}
